<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="gateway" type="com.atlas.model.AtlasGatewayEntity" />
        <variable name="callback" type="com.atlas.ui.gateway_list.GatewayClickCallback" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:clipToPadding="false"
        android:paddingVertical="3dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp" >

        <View
            android:id="@+id/avatar"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/circle"
            android:scaleType="centerInside"
            android:gravity="center"
            android:layout_marginTop="6dp"/>

        <LinearLayout
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/avatar"
            android:orientation="horizontal"
            android:onClick="@{ () -> callback.onCLick(gateway)}">

            <TextView
                android:id="@+id/alias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="@{gateway.alias}"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_alignStart="@+id/date"
            android:animateLayoutChanges="true"
            android:clickable="true"
            android:focusable="true"
            android:gravity="end"
            android:orientation="vertical"
            android:paddingVertical="8dp"
            android:onClick="@{ () -> callback.onCLick(gateway)}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill_horizontal">

                <TextView
                    android:id="@+id/identity_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:text="@string/identity"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/identity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:text="@{gateway.identity}"
                    android:textAlignment="center"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/expandImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:src="@drawable/dropdown_white" />

            </LinearLayout>
    </RelativeLayout>
</layout>