<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="client" type="com.atlas.model.AtlasClientEntity" />
        <variable name="callback" type="com.atlas.ui.client_list.callback.ClientClickCallback" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="@{ () -> callback.onCLick(client)}"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:clipToPadding="false"
            android:paddingVertical="3dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

            <View
                android:id="@+id/avatar"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="6dp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:scaleType="centerInside" />

            <LinearLayout
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/avatar"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/client_identity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:text="@{client.identity}"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>